cabal-version:       2.4
-- Initial package description 'mems.cabal' generated by 'cabal init'.  For
--  further documentation, see http://haskell.org/cabal/users-guide/

name:                mems
version:             0.1.0.0
synopsis:            Rover Mini ECU (MEMS) Tool Library
-- description:
homepage:            https://www.github.com/kuono/mems
-- bug-reports:
license:             MIT
license-file:        LICENSE
author:              Kentaro UONO
maintainer:          info@kuono.net
copyright:           2018-2021
-- category:
extra-source-files:  CHANGELOG.md, README.md

common common-options
  default-language:    Haskell2010
  ghc-options:         -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wredundant-constraints
                       -Wnoncanonical-monad-instances
                       -Wmissing-import-lists

library
  import:              common-options
  exposed-modules:     Mems
  -- other-modules:
  other-extensions:    LambdaCase, BangPatterns
  build-depends:       random, brick, serialport, base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
  hs-source-dirs:      src

executable mems
  import:              common-options
  main-is:             Main.hs
  --other-modules:       
  other-extensions:    LambdaCase, BangPatterns
  build-depends:       random, mems, brick, base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
  hs-source-dirs:      app

test-suite mems-test
  import:              common-options
  main-is:             MyLibTest.hs
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  build-depends:       random, mems, brick, base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
