extra-source-files:  CHANGELOG.md, README.md

common shared-properties
  default-language:    Haskell2010
  ghc-options:         -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates -Wmissing-import-lists -Wcompat

library
  exposed-modules:     Mems
  -- other-modules:
  -- other-extensions:
  build-depends:       brick, bytestring, stm, transformers, time, serialport, directory, random, base ^>=4.14.1.0
  hs-source-dirs:      src

test-suite mems-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       random, bytestring, base ^>=4.14.1.0
