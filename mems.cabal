cabal-version:       2.4
-- Initial package description 'mems.cabal' generated by 'cabal init'.  For
--  further documentation, see http://haskell.org/cabal/users-guide/

name:                mems
version:             0.1.0.0
synopsis:            Rover Mini ECU (MEMS) Tool Library
-- description:
homepage:            https://www.github.com/kuono/mems
-- bug-reports:
license:             MIT
license-file:        LICENSE
author:              Kentaro UONO
maintainer:          info@kuono.net
copyright:           2018-2021
-- category:
extra-source-files:  CHANGELOG.md, README.md

common shared-properties
  default-language:    Haskell2010
  ghc-options:         -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates -Wmissing-import-lists -Wcompat

library
  import:              shared-properties
  exposed-modules:     MyLib, Mems
  -- other-modules:
  other-extensions:    LambdaCase, BangPatterns
  build-depends:       brick,serialport, base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
  hs-source-dirs:      src

executable mems
  import:              shared-properties
  main-is:             Main.hs
  --other-modules:       
  other-extensions:    LambdaCase, BangPatterns
  build-depends:       mems,brick, base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
  hs-source-dirs:      app

test-suite mems-test
  import:              shared-properties
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       random,mems,brick,base ^>=4.14.1.0, bytestring ^>=0.10.12.0, stm ^>=2.5.0.0, transformers ^>=0.5.6.2, time ^>=1.9.3, directory ^>=1.3.6.0
